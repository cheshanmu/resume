page {
  background-color: #fff;
  height: 100%;
}
.box {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: url('http://q7jwsdbjc.bkt.clouddn.com/upload/20200402/1252387997dbeb.jpg');
  background-size: cover;
  background-position: center;
}
.box .self_info {
  width: 550rpx;
  height: 800rpx;
  border-radius: 20rpx;
  position: absolute;
  display: flex;
  background: rgba(0, 0, 0, 0.3);
  color: #f0f0f0;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.box .self_info .self_img image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 30rpx;
}
.box .self_info .self_name {
  align-self: center;
  margin: 20rpx 0rpx;
  font-size: 48rpx;
}
.box .self_info .self_job {
  font-size: 28rpx;
}
.box .self_info .self_desc {
  margin: 20rpx 40rpx;
  font-size: 32rpx;
  letter-spacing: 2rpx;
  text-indent: 64rpx;
}
.box .self_info .self_icon {
  width: 300rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
}
.box .self_info .self_icon image {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.8;
  border-radius: 50%;
}
